<%= javascript_include_tag "https://js.stripe.com/v2/" %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_tag "/subscriptions/update_card_details", id: "payment-form" do %>
      <span class="payment-errors text-danger"></span>

      <div class="form-group">
        <label for="number">Card Number</label>
        <input type="text" size="20" data-stripe="number" id="number" class="form-control">
      </div>

      <div class="form-group">
        <div>
          <label for="exp">Expiration (MM/YY)</label>
          <input type="text" size="2" data-stripe="exp_month" id="exp" class="form-control exp-field">
          <span> / </span>
          <input type="text" size="2" data-stripe="exp_year" class="form-control exp-field">
        </div>
      </div>

      <div class="form-group">
        <label for="cvc">CVC</label>
        <input type="text" size="4" data-stripe="cvc" id="cvc" class="form-control">
      </div>

      <input type="submit" class="submit" value="Submit Payment" class="btn btn-primary">
    <% end %>
  </div>
</div>

<script type="text/javascript">
